{
	"info": {
		"_postman_id": "7122f609-1674-47b0-963b-7c9eeedd8500",
		"name": "Token-based Authentication Flow in Postman",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
